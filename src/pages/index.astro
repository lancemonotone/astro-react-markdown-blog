---
import Layout from "../layouts/Layout.astro";
const name = "Rus";
const style = "purple";
const response = await fetch(
  "https://jsonplaceholder.typicode.com/users?limit=5"
);
const users = await response.json();
const visible = false;
---
<Layout>
  
  <div class="container">
    <h1 class={style}>Hello {name}</h1>
  
    <ul>
      {
        users.map((user) => (
          <li>
            {Object.keys(user).map((key) => {
              if (typeof user[key] === "object") {
                let obj = user[key];
                return (
                  <div>
                    <h3>{key}</h3>{" "}
                    {Object.keys(obj).map((key) => {
                      return (
                        <div>
                          {key}: {obj[key]}
                        </div>
                      );
                    })}
                  </div>
                );
              } else {
                return (
                  <div>
                    <h2>{key}</h2> {user[key]}
                  </div>
                );
              }
            })}
          </li>
        ))
      }
    </ul>
  
    {visible ? <p>Visible</p> : <p>Not Visible</p>}
  </div>

</Layout>

<style lang="scss" scoped>
