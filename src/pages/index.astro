    --main-bg-color: #1e1e1e;
    --main-bg-color-lighter: #2e2e2e;; 
    --main-bg-color-hue: #306A00;
     // not quite white
    --main-color: #e9e8cf;
    // what is a complimentary color to  #800080
    --main-border-color: #1C001C;
    }

  // html body reset
  html,
  body {
    background-color: var(--main-bg-color);
    color: var(--main-color);
    margin: 0;
    padding: 0;
    font-family: sans-serif;
  }

  //  heading reset
