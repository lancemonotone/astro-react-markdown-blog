---
import logos from "../images/framework-logos.png";
import logosSmall from "../images/framework-logos-small.png";

export interface ShowcaseProps {
  heading?: string;
  text?: string;
  showExtra?: boolean;
}

const {
  heading = "Welcome to the Astro Crash Course!",
  text = "Build super fast HTML-first websites using your favorite JavaScript framworks",
  showExtra = true,
} = Astro.props as ShowcaseProps;
---

<section class="showcase">
  <div class="showcase-text">
    <h1>{heading}</h1>
    <p>
      {text}
    </p>
  </div>

  {
    showExtra && (
      <>
        <div class="showcase-img">
          <img class="logos logos--large" src={logos} alt="" />
          <img class="logos logos--small" src={logosSmall} alt="" />
        </div>

        <p class="showcase-demo">
          <small>
            This is a demo website used for the YouTube crash course
          </small>
        </p>
      </>
    )
  }
</section>

<style lang="scss">
  .showcase {
    height: auto;
    background-color: var(--color-secondary);
    background-image: linear-gradient(
      to bottom,
      var(--color-primary),
      rgb(15 23 42 / 0)
    );

    padding: 30px;
    .showcase-blog {
      min-height: 300px;
    }
    h1 {
      font-size: 50px;
      color: #fff;
      margin-bottom: 20px;
    }

    p {
      font-size: 24px;
      margin-bottom: 20px;
    }

    &-text {
      max-width: 500px;
      color: #fff;
      text-align: center;
      margin: 50px auto;
    }

    &-img {
      text-align: center;
      img {
        border-radius: 10px;
        margin: auto;
      }
    }

    &-demo {
      color: #fff;
      text-align: center;
      font-weight: 300;
    }
  }
</style>
