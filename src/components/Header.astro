---
import logo from "../images/logo.svg";
import { addBasePath } from "../utilities/addBasePath";
---

<header class="header">
  <div class="container">
    <div class="logo">
      <a href="/">
        <img src={logo} alt="" />
      </a>
    </div>
    <nav>
      <ul>
        <li><a href={addBasePath("/")}>Home</a></li>
        <li><a href={addBasePath("/about")}>About</a></li>
        <li><a href={addBasePath("/blog")}>Blog</a></li>
      </ul>
    </nav>
  </div>
</header>

<style lang="scss" scoped>
  .header {
    height: 70px;
    background: var(--color-primary);

    .container {
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 20px;

      .logo {
        img {
          height: 35px;
          vertical-align: middle;
        }
      }

      nav {
        ul {
          display: flex;

          li {
            padding: 0 10px;

            a {
              color: #fff;
            }
          }
        }
      }
    }
  }
</style>
