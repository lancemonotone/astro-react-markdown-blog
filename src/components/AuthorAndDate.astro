---
import { formattedDate } from "../utilities/formattedDate";

export interface AuthorAndDateProps {
  author: string;
  date: string;
}

const { author, date } = Astro.props as AuthorAndDateProps;
---

<h5 class="author-and-date">
  <span class="author">{author}</span> &bull;{" "}
  <span class="date">{formattedDate(date)}</span>
</h5>

<style lang="scss">
  .author-and-date {
    font-size: 0.8rem;
    color: var(--color-gray-500);
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .author {
    font-weight: 600;
  }

  .date {
    font-style: italic;
    font-weight: 400;
  }
</style>
